{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug", // Enables Debug and above for your code
      "Override": {
        "Microsoft": "Information", // Reduces noise from Microsoft system logs
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console" // Writes logs to console
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId" // Adds contextual info like thread ID
    ],
    "Properties": {
      "Application": "TaskManager" // Adds a global property to all logs
    }
  },
  "EmailSettings": {
    "SenderName": "",
    "From": "",
    "SmtpServer": "",
    "Port": 0,
    "UserName": "",
    "Password": ""  //create App pass in Google Account settings insteasd of using your Google Account password
  },


  "AllowedHosts": "*",

  "ConnectionStrings": {
    // "TaskManagerDb": "Server=.;Database=TaskManager;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=True",
    "TaskManagerAuthDB": "" //moved to env variables
  },

  //moved to env variables
  "Jwt": {
    "Key": "", // Symmetric key used for JWT token generation/validation
    "Issuer": "", // Token issuer
    "Audience": "" // Token audience
  }
}
